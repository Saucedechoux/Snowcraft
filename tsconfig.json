{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "es6",
        "outDir": "./js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "removeComments": true,
        "composite": false,
        "declaration": false,
        // "declarationDir": "./scripts/types"
    },
    "include": ["./ts/*"],
    "exclude": ["node_modules", "./js/*"]
}